@using Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models
@model Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models.PersonalModel
@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<a class="" href="@Url.Action("../Personal/Index")">Lista Personal</a>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="container">
        <h2>Detalles Personal</h2>
        <div class="row">
            <div class="col s12 m4">
                <h4>Usuario</h4>
                <div class="form-group">
                    @Html.LabelFor(model => model.Usuario.Username)
                    @Html.TextBoxFor(model => model.Usuario.Username, new { @class = "form-control ", @placeholder = "Usuario", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Usuario.Username)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Usuario.Password, new { @class = "form-control", @placeholder = "Password", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Usuario.Password)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Usuario.EsAdmin, new { @class = "form-check-label" })
                    @Html.CheckBoxFor(model => model.Usuario.EsAdmin, new { @class = "form-check-input", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Usuario.EsAdmin)
                </div>
            </div>
            <div class="col s12 m4">
                <div>
                    <h4>Persona</h4>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ci)
                        @Html.TextBoxFor(model => model.Ci, new { @placeholder = "Ci", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Ci)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre)
                        @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Nombre", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PrimerApellido)
                        @Html.TextBoxFor(model => model.PrimerApellido, new { @placeholder = "Primer Apellido", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.PrimerApellido)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SegundoApellido)
                        @Html.TextBoxFor(model => model.SegundoApellido, new { @placeholder = "Segundo Apellido", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.SegundoApellido)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Sexo)
                        @Html.DropDownListFor(model => model.Sexo.IdSexo, (IEnumerable<SelectListItem>)ViewBag.ListaSexos, new { @style = "display: block", @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Sexo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaNacimiento)
                        @Html.TextBoxFor(model => model.FechaNacimiento, new { @type = "date", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento)
                    </div>
                </div>
            </div>
            <div class="col s12 m4">
                <div>
                    <h4>Datos Cliente</h4>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CodPersonal)
                        @Html.TextBoxFor(model => model.CodPersonal, new { @placeholder = "Codigo", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.CodPersonal)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Sueldo)
                        @Html.TextBoxFor(model => model.Sueldo, new { @placeholder = "Razon", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Sueldo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FechaIngreso)
                        @Html.TextBoxFor(model => model.FechaIngreso, new { @type = "date", @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FechaIngreso)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cargo)
                        @Html.DropDownListFor(model => model.Cargo.IdCargo, (IEnumerable<SelectListItem>)ViewBag.ListaCargo, new { @style = "display: block", @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Cargo)
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m4">
                <h4>Correos</h4>
                @for (var i = 0; i < Model.Correos.Count; i++)
                {
                    <div>
                        <h6 class="text-center">Correo @(i + 1)</h6>
                        <div class="form-group">
                            @Html.LabelFor(correo => Model.Correos[i].Nombre)
                            @Html.TextBoxFor(correo => Model.Correos[i].Nombre, new { @placeholder = "Nombre Correo", @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(correo => Model.Correos[i].Nombre)
                        </div>
                        <div>
                            @Html.LabelFor(correo => Model.Correos[i].Principal)
                            @Html.CheckBoxFor(correo => Model.Correos[i].Principal, new { @style = "display:block", @class = "form-check-input", @disabled = "disabled" })
                            @Html.ValidationMessageFor(correo => Model.Correos[i].Principal)
                        </div>
                        <hr />
                    </div>
                }
            </div>
            <div class="col s12 m4">
                <h4>Direcciones</h4>
                @for (var i = 0; i < Model.Direcciones.Count; i++)
                {
                    <div>
                        <h6 class="text-center">Direccion @(i + 1)</h6>
                        <div class="form-group">
                            @Html.LabelFor(direccion => Model.Direcciones[i].Descripccion)
                            @Html.TextBoxFor(direccion => Model.Direcciones[i].Descripccion, new { @placeholder = "Descripccion", @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(direccion => Model.Direcciones[i].Descripccion)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(direccion => Model.Direcciones[i].Tipo)
                            @Html.DropDownListFor(direccion => Model.Direcciones[i].Tipo.IdTipo, (IEnumerable<SelectListItem>)ViewBag.ListaTipo, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(direccion => Model.Direcciones[i].Latitud)
                            @Html.TextBoxFor(direccion => Model.Direcciones[i].Latitud, new { @placeholder = "Latitud", @value = "", @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(direccion => Model.Direcciones[i].Latitud)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(direccion => Model.Direcciones[i].Longitud)
                            @Html.TextBoxFor(direccion => Model.Direcciones[i].Longitud, new { @placeholder = "Longitud", @value = "", @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(direccion => Model.Direcciones[i].Longitud)
                        </div>
                        <hr />
                    </div>
                }

            </div>
            <div class="col s12 m4">
                <h4>Telefonos</h4>
                @for (var i = 0; i < Model.Telefonos.Count; i++)
                {
                    <div>
                        <h6 class="text-center">Telefono @(i + 1)</h6>
                        <div class="form-group">
                            @Html.LabelFor(telefono => Model.Telefonos[i].Numero)
                            @Html.TextBoxFor(telefono => Model.Telefonos[i].Numero, new { @placeholder = "Numero", @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(telefono => Model.Telefonos[i].Numero)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(telefono => Model.Telefonos[i].Tipo)
                            @Html.DropDownListFor(telefono => Model.Telefonos[i].Tipo.IdTipo, (IEnumerable<SelectListItem>)ViewBag.ListaTipo, new { @style = "display: block", @class = "form-control", @disabled = "disabled" })
                        </div>
                        <hr />
                    </div>
                }
            </div>
        </div>
        <div class="py-3">
            <input type="submit" name="resp" value="Atras" class="btn btn-primary" />
        </div>
    </div>


}

