@{ 
    Upds.Sistemas.ProgWeb2.Tintoreria.Core.Usuario usuario = ViewBag.Usuario != null ? ViewBag.Usuario : null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <!--Import Google Icon Font-->
    <link href="@Url.Content("https://fonts.googleapis.com/icon?family=Material+Icons")" rel="stylesheet">
    <link href="@Url.Content("~/content/font-awesome.min.css")" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/content/bootstrap.min.css")" media="screen,projection" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.0.0.min.js")"></script>
    <script src="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js")" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/popper.min.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script><!--Let browser know website is optimized for mobile-->
</head>
<body>
    <div class="bg-dark" style="width: 100vw; height: 8vh">
        <div class="float-left">
            <h3 class="text-white mt-4 ml-5">TintoreriaAPP</h3>
        </div>
        <div class="float-right mr-3">
            <div class="btn-group mr-5 mt-3">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @(usuario != null ? usuario.Username : "No Registrado")
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="@Url.Action("../Login/Logout")">Cerrar Sesion</a>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row" style="height: 92vh; width: 100vw">
        <div class="bg-dark"  style="width: 15%; height: 100%">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("../Trabajo/Index")">TRABAJO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("../Cliente/Index")">CLIENTE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("../Personal/Index")">PERSONAL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("../Cargo/Index")">CARGO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("../Categoria/Index")">CATEGORIA</a>
                </li>
            </ul>
        </div>
        <div style="height:auto; overflow-y: scroll; width:85%" class="p-4">
            @RenderBody()
        </div>
    </div>
</body>
</html>