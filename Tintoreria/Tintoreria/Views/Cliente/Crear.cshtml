@model Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models.ClienteModel

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Crear</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <div class="row">
            <div class="col s12 m4">
                <div class="input-field">
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "validate", @placeholder = "Nombre" })
                    @*@Html.ValidationMessageFor(model => model.Nombre)*@
                </div>
                <div class="input-field">
                    @Html.TextBoxFor(model => model.PrimerApellido, new { @class = "validate", @placeholder = "Primer Apellido" })
                    @*@Html.ValidationMessageFor(model => model.SegundoApellido)*@
                </div>
                <div class="input-field">
                    @Html.TextBoxFor(model => model.SegundoApellido, new { @class = "validate", @placeholder = "Segundo Apellido" })
                    @*@Html.ValidationMessageFor(model => model.SegundoApellido)*@
                </div>
                <div class="input-field">
                    @Html.DropDownListFor(model => model.Sexo.IdSexo,(IEnumerable<SelectListItem>)ViewBag.ListaSexos, new { style="Display: block"})
                </div>
           
                <div class="input-field">
                    @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "validate", @placeholder = "Fecha de Nacimiento" })
                    @*@Html.ValidationMessageFor(model => model.FechaNacimiento)*@
                </div>
            </div>
            <div class="col s12 m4">
                <div>
                    <div class="input-field">
                        @Html.TextBoxFor(model => model.Username, new { @class = "validate", @placeholder = "Nombre Usuario" })
                        @*@Html.ValidationMessageFor(model => model.Username)*@
                    </div>
                    <div class="input-field">
                        @Html.TextBoxFor(model => model.Password, new { @class = "validate", @placeholder = "Contraseña" })
                        @*@Html.ValidationMessageFor(model => model.Password)*@
                    </div>
                    <br />
                    <div class="input-field">
                        @Html.TextBoxFor(model => model.Nit, new { @class = "validate", @placeholder = "Nit" })
                        @*@Html.ValidationMessageFor(model => model.Nit)*@
                    </div>
                    <div class="input-field">
                        @Html.TextBoxFor(model => model.Razon, new { @class = "validate", @placeholder = "Razon" })
                        @*@Html.ValidationMessageFor(model => model.Razon)*@
                    </div>

                </div>
            </div>
            <div class="col s12 m4">
                <div>
                    <div>
                        <h4>
                            Direccion
                        </h4>
                        @foreach (var item in Model.Direcciones)
                        {
                            <div>
                                @Html.DisplayNameFor(modelitem =>item.Descripccion)
                                @Html.TextBoxFor(modelitem =>item.Descripccion)
                                <br />
                            </div>

                        }

                    </div>
                    <div>
                        <h4>
                            Contacto
                        </h4>


                    </div>
                </div>
            </div>
        </div>
}

