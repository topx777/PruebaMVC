@using PagedList.Mvc
@*@model IEnumerable<Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models.CategoriaModel>*@
@model PagedList.IPagedList<Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models.CategoriaModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lista Categorias</h2>
@*<a class="waves-effect waves-light btn">button</a>
    <a class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>button</a>
    <a class="waves-effect waves-light btn"><i class="material-icons right">cloud</i>button</a>*@
<a class="waves-effect waves-light btn blue" href="@Url.Action("../Categoria/Crear")"><i class="material-icons left">add</i>Crear Categoria</a>

@using (Html.BeginForm())
{
    <table class="table table-striped">
        <tr>
            <th>
                @Html.Label("Nombre")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Precio)*@
                @Html.Label("Precio")
            </th>
            <th>Actions</th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Model[i].Nombre
                </td>
                <td>
                    @Model[i].Precio
                </td>
                <td>
                    <a class="waves-effect waves-light btn amber" href="@Url.Action("../Categoria/Ver", new { mCodigo = Model[i].IdCategoria })"><i class="material-icons left">remove_red_eye</i> Ver</a>
                    <a class="waves-effect waves-light btn green" href="@Url.Action("Editar", "Categoria", new { mCodigo = Model[i].IdCategoria })"><i class="material-icons left">edit</i> Editar</a>
                    <a class="waves-effect waves-light btn red" href="@Url.Action("../Categoria/Eliminar", new { mCodigo = Model[i].IdCategoria })"><i class="material-icons left">delete</i> Eliminar</a>
                    @*@Html.ActionLink("<i class=\"material - icons left\">pencil</i> Editar", "../Paciente/Ver", new { mCodigo = item.IdCategoria }, new { @class = "waves-effect waves-light btn" }) |*@
                </td>
            </tr>
        }

    </table>
    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
}


