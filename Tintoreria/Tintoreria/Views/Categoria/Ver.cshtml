@model Upds.Sistemas.ProgWeb2.Tintoreria.MVC.Models.CategoriaModel

@{
    ViewBag.Title = "Ver Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Ver Categoria</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="row">
            <div class="col s6">
                <div class="row">
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.Nombre)
                    </div>
                    <div class="input-field col s10">
                        @Html.TextBoxFor(model => model.Nombre, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.Descripcion)
                    </div>
                    <div class="input-field col s10">
                        @Html.TextBoxFor(model => model.Descripcion, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.Precio)
                    </div>
                    <div class="input-field col s10">
                        @Html.TextBoxFor(model => model.Precio, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Precio)
                    </div>
                </div>
                <a href="@Url.Action("../Categoria/Index")" class="waves-effect waves-light btn red">
                    <i class="material-icons left">arrow_back</i> Volver Atras
                </a>
            </div>
        </div>
    </fieldset>
}

